pipeline {
    agent any
    environment {
        CURRENT_TAG = ${env.BUILD_ID}
        }
    stages {
      stage ("Deploying to Development server") {
        	steps {
            	sh 'scp docker/dev/deploy.sh docker/dev/docker-compose.yml ${REMOTE_USER}@${REMOTE_HOST}:~/'
              sh 'ssh ${REMOTE_USER}@${REMOTE_HOST} "chmod +x deploy.sh docker-compose.yml"'
              sh 'ssh ${REMOTE_USER}@${REMOTE_HOST} ./deploy.sh'
          }
      }
    }
}
